{
  "extends": "@bytebank-pro/typescript-config/base.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "bundler"
  },
  "include": ["src/**/*", "src/types/*.d.ts"],
  "exclude": ["dist", "node_modules"]
}
